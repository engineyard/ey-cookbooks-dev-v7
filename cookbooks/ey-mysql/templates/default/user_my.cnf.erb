[client]
<% if !@is_rds && @home_dir != '/root/' %>
<% if @mysql_version >= @mysql_5_7 %>
ssl-mode=VERIFY_CA
<% end %>
ssl-ca=<%= File.join(@home_dir, '.mysql/root.crt') %>
ssl-cert=<%= File.join(@home_dir, '.mysql/mysql.crt') %>
ssl-key=<%= File.join(@home_dir, '.mysql/mysql.key') %>
<% end %>
user=<%= @username %>
password=<%= @password %>
host=<%= @host %>

<% if @home_dir == '/root/' %>
[mysqladmin]
user=<%= @username %>
password=<%= @password %>
host=<%= @host %>
<% end %>
