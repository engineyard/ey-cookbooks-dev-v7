[Unit]
Description=Unicorn Service

[Service]
Type=forking
WorkingDirectory=/data/<%= @app %>/current
ExecStart=/bin/bash -lc "bundle exec unicorn -E <%= @environment %> -c /data/<%= @app %>/current/config/unicorn.rb -D /data/<%= @app %>/current/config.ru"

User=root
Group=root
RestartSec=30
Restart=on-failure

StandardOutput=append:/data/<%= @app %>/current/log/unicorn.log
StandardError=append:/data/<%= @app %>/current/log/unicorn.stderr.log
EnvironmentFile=/data/<%= @app %>/shared/config/env.cloud
